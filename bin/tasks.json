{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Files",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "./src/classFiles",
                "./src/**/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile to HadesLanguage.jar",
            "type": "shell",
            "command": "jar",
            "args": [
                "cvfm",
                "./bin/HadesLanguage.jar",
                "./src/manifest.txt",
                "-C",
                "./src/classFiles",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "Compile Files",
            "problemMatcher": []
        }
    ]
}